#:include layouts/unknown_conditions_widget.kv
#:include layouts/clear_conditions_widget.kv
#:include layouts/conditions_widget.kv
#:include layouts/forecast_widget.kv
#:include layouts/forecast_label_widget.kv

<CurrentWeather>:
    orientation: "vertical"
    conditions: conditions
    on_right_to_left_line: app.root.show_forecast(root.location)
    on_bottom_to_top_line: root.update_weather()

    BoxLayout:
        Label:
            text: "{} ({})".format(root.location[0], root.location[1])
            font_size: "30dp"
        Label:
            text: "{}".format(root.temp)
            font_size: "30dp"
    BoxLayout:
        id: conditions
    BoxLayout:
        orientation: "horizontal"

        Label:
            text: "Low: {}".format(root.temp_min)
        Label:
            text: "High: {}".format(root.temp_max)
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "40dp"
        Button:
            text: "Locations"
            on_press: app.root.show_locations()
        Button:
            text: "Forecast"
            on_press: app.root.show_forecast(root.location)
        Button:
            text: "Settings"
            on_press: app.open_settings()