<AddLocationForm>:
    orientation: 'vertical'
    search_input: search_box
    search_results: search_results_list
    BoxLayout:
        height: '40dp'
        size_hint_y: None
        TextInput:
            id: search_box
            multiline: False
            focus: True
            size_hint_x: 50
            on_text_validate: root.search_location()
        Button:
            text: 'Search'
            size_hint_x: 25
            on_press: root.search_location()
        Button:
            text: 'Current Location'
            size_hint_x: 25
    ListView:
        id: search_results_list
        adapter:
            ListAdapter(
            data=[],
            cls=main.LocationButton,
            args_converter=main.args_converter)
    Button:
        height: "40dp"
        size_hint_y: None
        text: "Cancel"
        on_press: app.root.show_current_weather()